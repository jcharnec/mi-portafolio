---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
---

<Layout title="Porfolio de HotaDev - Desarrollador y Programador WEB"
    description="Contrata a HotaDev para crear tu aplicación web.">
    <main class="px-4">
        <SectionContainer class="py-44 pb-22">
            <h1
                class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
            >
                Hola, soy Joan Pere Charneco
                <a
                    href="http://www.linkedin.com/in/hotadev"
                    target="_blank"
                    rel="noopener"
                    class="flex justify-center items-center"
                >
                    <Badge>Disponible para trabajar</Badge>
                </a>
            </h1>
            <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px] opacity-80">
                Técnico Superior en Desarrollo de Aplicaciones Multiplataforma.
                Ubicado en <span class="text-red-300/80">Barcelona, España</span
                >. Mi último año y medio se ha enfocado en el desarrollo de aplicaciones
                web, cursando un CP de desarrollo web <span
                    class="opacity-100 font-bold"
                >
                    JS, CSS y PHP</span
                > y dos certificados, uno en <span class="opacity-100 font-bold"
                    >LARAVEL
                </span> y el otro en <span class="opacity-100 font-bold"
                    >Angular</span>
            </h2>

            <nav class="flex gap-x-4 mt-8">
                <SocialPill href="http://www.linkedin.com/in/hotadev">
                    <LinkedInIcon class="w-6 h-6" />
                    LinkedIn
                </SocialPill>
                <SocialPill href="https://github.com/jcharnec">
                    <GithubIcon class="w-6 h-6" />
                    GitHub
                </SocialPill>
                <SocialPill href="mailto:xjpeterx@gmail.com">
                    <Mail class="w-6 h-6" />
                    xjpeterx@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>
        <SectionContainer id="experiencia">
            <h2 class="text-2xl font-semibold mb-6 flex-gap-x-2 items-center">
                <Briefcase class="size-7 inline"/>
                Experiencia laboral
            </h2>
            <Experience />
        </SectionContainer>
    </main>
</Layout>