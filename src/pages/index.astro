---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import SocialPill from "../components/SocialPill.astro";
import GithubIcon from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
import About from "../components/About.astro";
---

<Layout
    title="HotaDev | Desarrollador Web Full-Stack"
    description="Portfolio de Joan Pere Charneco Boix, desarrollador web especializado en Laravel, Symfony, Angular y más."
>
    <main class="px-4">
        <!-- Presentación -->
        <SectionContainer class="py-44 pb-22">
            <h1
                class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
            >
                Hola, soy Joan Pere Charneco
                <a
                    href="http://www.linkedin.com/in/hotadev"
                    target="_blank"
                    rel="noopener"
                    class="flex justify-center items-center"
                >
                    <Badge>Disponible para trabajar</Badge>
                </a>
            </h1>

            <About />

            <nav class="flex gap-x-4 mt-8">
                <SocialPill href="http://www.linkedin.com/in/hotadev">
                    <LinkedInIcon class="size-6" />
                    LinkedIn
                </SocialPill>
                <SocialPill href="https://github.com/jcharnec">
                    <GithubIcon class="size-6" />
                    GitHub
                </SocialPill>
                <SocialPill href="mailto:xjpeterx@gmail.com">
                    <Mail class="size-6" />
                    xjpeterx@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>

        <!-- Experiencia -->
        <SectionContainer id="experiencia">
            <h2
                class="text-white text-3xl font-semibold mb-6 flex items-center gap-x-3"
            >
                <Briefcase class="size-7 inline" />
                Experiencia laboral
            </h2>
            <Experience />
        </SectionContainer>

        <!-- Proyectos -->
        <SectionContainer id="proyectos">
            <h2
                class="text-white text-3xl font-semibold mb-6 flex items-center gap-x-3"
            >
                <Code class="size-8 inline" />
                Proyectos
            </h2>
            <Projects />
        </SectionContainer>

        <!-- Contacto -->
        <SectionContainer id="contacto">
            <h2 class="text-white text-3xl font-semibold mb-6">Contacto</h2>
            <p class="text-lg mb-4 text-white">
                ¿Interesado en colaborar conmigo o tienes alguna propuesta?
            </p>
            <nav class="flex gap-x-4 mt-8">
                <SocialPill href="mailto:xjpeterx@gmail.com">
                    <Mail class="size-6" />
                    xjpeterx@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>
    </main>
</Layout>
