---
// src/components/Projects.astro
const TAGS: Record<string, string> = {
    HTML: "bg-red-500",
    CSS: "bg-blue-500",
    JavaScript: "bg-yellow-500",
    PHP: "bg-purple-500",
    SQL: "bg-green-500",

    // Frameworks y librerías
    Laravel: "bg-red-600",
    Blade: "bg-pink-500",
    Bootstrap: "bg-indigo-500",
    Angular: "bg-red-700",
    Astro: "bg-orange-500",       
    "Tailwind CSS": "bg-teal-500",

    // Lenguajes adicionales
    TypeScript: "bg-blue-400",
    C: "bg-gray-700",
    Java: "bg-orange-600",

    // Bases de datos
    MySQL: "bg-teal-600",
    PostgreSQL: "bg-sky-700",

    // Servicios y protocolos
    SMTP: "bg-yellow-600",
    Docker: "bg-blue-800",
    Render: "bg-violet-700",
};


const PROJECTS = [
    {
        title: "LaraNews",
        description:
            "LaraNews es una plataforma de noticias construida con Laravel que permite a los usuarios registrarse, verificar su email, crear y gestionar noticias con imágenes, comentar, y explorar el contenido mediante filtros por título o tema. Dispone de un sistema de panel de usuario como de administrador, edición de perfil y papelera para noticias y usuarios. Incluye además email de contacto, seguridad con políticas y middleware, y despliegue en producción sobre PostgreSQL con persistencia de imágenes. Todo ello presentado en un diseño responsive y moderno, con modo oscuro y ideal para desktop y móvil.",
        image: "/projects/laranews.png",
        link: "https://laranews.onrender.com/",
        github: "https://github.com/jcharnec/laranews",
        tags: [
            "PHP",
            "Laravel",
            "Blade",
            "Bootstrap",
            "HTML",
            "CSS",
            "JavaScript",
            "PostgreSQL",
            "SMTP",
            "Docker",
            "Render",
        ],
    },
    {
        title: "LaraBikes",
        description:
            "LaraBikes es mi proyecto personal para demostrar cómo construir un sistema de gestión de motos 100% funcional en Laravel. Incluye autenticación con email verification, CRUD con imágenes, filtros de búsqueda, y un panel de administración con roles de usuario. Todo ello presentado en un diseño responsive y moderno, ideal para desktop y móvil.",
        image: "/projects/larabikes.png",
        link: "https://larabikes-1.onrender.com/",
        github: "https://github.com/jcharnec/larabikes",
        tags: [
            "PHP",
            "Laravel",
            "Blade",
            "Bootstrap",
            "HTML",
            "CSS",
            "JavaScript",
            "MySQL",
            "SMTP",
        ],
    },
    {
        title: "MolletTronika",
        description:
            "Landing page para Mollettronika 2025, evento de música electrónica urbana en Mollet del Vallès. Diseño impactante, responsive y coherente con la estética underground, con sección de lineup integrada en la página principal, artistas, ubicación y horarios. Incluye elementos visuales animados (marquesinas, flyers, efectos glitch, vinilos girando) y está optimizada para redes sociales. Aunque ya no está publicada tras el evento, puede consultarse como demo en mi portfolio.",
        image: "/projects/mollettronika.png",
        link: "https://mollettronika.vercel.app/",
        github: "https://github.com/jcharnec/mollettronika",
        tags: ["Astro", "Tailwind CSS", "JavaScript", "Vercel"],
    },

    {
        title: "Places",
        description:
            "Places es una aplicación web social que permite a los usuarios compartir lugares interesantes del mundo, con descripciones personalizadas e imágenes representativas. Fue desarrollada como parte del CP de desarrollo web, utilizando PHP puro en el backend y SQL para la gestión de datos. El frontend se basa en HTML, CSS y JavaScript sin frameworks, priorizando la compatibilidad y la simplicidad. Incluye funcionalidades como creación de ubicaciones, edición, filtrado y búsqueda por texto, todo dentro de una interfaz ligera y responsive.",
        image: "/projects/cifoplaces.png",
        link: "http://places.myartsonline.com/",
        github: "https://github.com/jcharnec/cifoplaces",
        tags: ["HTML", "CSS", "JavaScript", "PHP", "SQL"],
    },
];
---

{
    PROJECTS.map((project) => (
        <article class="mb-12">
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">
                <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline hover:text-yellow-100 transition"
                >
                    {project.title}
                </a>
            </h3>

            <a href={project.link} target="_blank" rel="noopener noreferrer">
                <img
                    class="w-full h-auto mb-4 hover:opacity-90 transition"
                    src={project.image}
                    alt={`Captura de pantalla del proyecto ${project.title}`}
                />
            </a>

            <p class="text-lg mb-4 text-white text-pretty">
                {project.description}
            </p>

            <div class="mb-4 space-x-4">
                <a
                    href={project.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-blue-400 underline hover:text-blue-300 transition"
                >
                    Ver Proyecto
                </a>
                <a
                    href={project.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-blue-400 underline hover:text-blue-300 transition"
                >
                    Código en GitHub
                </a>
            </div>

            <ul class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                    <li
                        class={`px-2 py-1 rounded text-sm ${TAGS[tag] || "bg-gray-600"}`}
                    >
                        {tag}
                    </li>
                ))}
            </ul>
        </article>
    ))
}
