---
// src/layouts/Layout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/onest";

interface Props {
    title: string;
    description: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Meta principal -->
        <title>{title}</title>
        <meta name="description" content={Astro.props.description} />
        <meta name="author" content="Joan Pere Charneco Boix" />
        <meta name="robots" content="index, follow" />
        <link rel="canonical" href="https://hotadev.com.es/" />

        <!-- Favicon -->
        <link rel="icon" type="image/png" href="/faviconjpc.png" />

        <!-- Open Graph (Facebook, LinkedIn, etc.) -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={Astro.props.description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://hotadev.com.es/" />
        <meta
            property="og:image"
            content="https://hotadev.com.es/og-image.jpg"
        />
        <meta property="og:locale" content="es_ES" />

        <!-- Twitter Cards -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={Astro.props.description} />
        <meta
            name="twitter:image"
            content="https://hotadev.com.es/og-image.jpg"
        />
        <meta name="twitter:site" content="@tuusuario" />
        <!-- opcional -->
        <meta name="twitter:creator" content="@tuusuario" />
        <!-- opcional -->

        <!-- JSON-LD (Structured Data tipo Person) -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Joan Pere Charneco Boix",
                "jobTitle": "Desarrollador Web Full‑Stack",
                "url": "https://hotadev.com.es",
                "sameAs": [
                    "https://www.linkedin.com/in/hotadev",
                    "https://github.com/jcharnec"
                ],
                "image": "https://hotadev.com.es/profile-pic2.png",
                "description": "Desarrollador web y multiplataforma en Barcelona con experiencia en Laravel, Angular, Symfony y más."
            }
        </script>
    </head>

    <body class="relative min-h-screen bg-transparent">
        <!-- Fondo -->
        <div
            class="pointer-events-none fixed inset-0 -z-10 w-full h-full bg-[radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
        >
        </div>

        <!-- Contenido -->
        <Header />
        <slot />
        <Footer />
        <!-- Script para calcular altura del header -->
        <script>
            function updateHeaderHeight() {
                const header = document.getElementById("main-header");
                if (header) {
                    document.documentElement.style.setProperty(
                        "--header-height",
                        header.offsetHeight + "px"
                    );
                }
            }

            window.addEventListener("load", updateHeaderHeight);
            window.addEventListener("resize", updateHeaderHeight);
        </script>
    </body>

    <style is:global>
        * {
            transition:
                color 0.3s ease,
                background-color 0.3s ease,
                border-color 0.3s ease;
        }

        html {
            font-family: "Onest Variable", system-ui, sans-serif;
            scroll-behavior: smooth;
        }

        html,
        body {
            background-color: #070728;
            min-height: 100vh;
            scroll-behavior: smooth;
        }

        body {
            background-color: #070728;
            min-height: 100vh; /* Quitamos flex para que sticky funcione */
            scroll-behavior: smooth;
        }

        @media (prefers-reduced-motion: reduce) {
            html {
                scroll-behavior: auto;
            }
        }
    </style>
</html>
